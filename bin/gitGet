##
# Download a tarball from a Git tag
##

PRE="GITGET"
DIR=$1
TAG=$2

while [ -z "$DIR" ]; do
  read -p "$PRE: Project Name: " DIR
done
while [ -z "$TAG" ]; do
  read -p "$PRE: Tarball: " TAG
done

# Check for an existing directory
if [ -d $DIR ]; then
  read -p "The project '$DIR' already exists.  Would you like to replace it (y/n)? " REPLACE
  if [ "$REPLACE" != "y" ]; then
    echo "$PRE: Cancelling..."
    exit 1
  else
    rm -rf $DIR
  fi
fi

# Download the tag
echo "$PRE: Acquiring tag..."
wget -q --no-check-certificate $TAG -O gitGet.tmp

# Unzip the tag
echo "$PRE: Extracting contents..."
#mkdir $DIR
tar -zxf gitGet.tmp

# How do I rename a file whose name I don't know?
mv $DIR-* $DIR

# Cleanup the tar file
echo "$PRE: Cleaning up..."
rm gitGet.tmp

echo "$PRE: Complete."
