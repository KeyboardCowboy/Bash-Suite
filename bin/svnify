#!/bin/bash
#
# File: svnify
# Author: Chris Albrecht
# Date: 2011/jul/27
#
# Import a directory to subversion then check it back out.

PRE="SVNIFY:"

if [ -z $1 ]; then
  echo "$PRE Please provide a path to the repository to store this directory."
  exit 1
fi

# Import the directory into svn
svn import . $1 -m 'Initial import.'

# Check out the directory, overriding the existing files
svn co --force $1 .
