#!/bin/bash
#
# File: commit.func
# Description: Commit changes to SVN and GIT, push them to GIT

# Get the commit message
M=$2

if [ -z "$M" ]; then
  svn ci
  git commit
else
  echo "$PRE Committing to SVN"
  svn ci -m $M

  echo "$PRE Committing to GIT"
  git commit -m $M
fi

echo "$PRE Pushing to GIT"
git push origin master
